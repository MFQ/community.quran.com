<div id="comment-modal" style="top: 10%;" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div style="background-color: white" class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Comments</h3>
  </div>
  <div style="background-color: white" class="modal-body">
    <%= form_for Comment.new, remote: true, url: {action: "create"}, html: {class: "nifty_form"} do |f| %>
      <%= f.text_area :message, style: "width: 100%", required: true %>
      <%= f.hidden_field :word_id, value: params[:id] %>
      <%= f.submit "Post", class: "pull-right btn-success" %>
    <% end %>

    <div class="js-comments row">
      <%= render partial: "comment", collection: @comments %>
    </div>

  </div>
  <div style="background-color: white" class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
  </div>
</div>
